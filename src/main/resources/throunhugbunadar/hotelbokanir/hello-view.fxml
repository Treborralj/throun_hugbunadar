<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="throunhugbunadar.hotelbokanir.HotelbokanirController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <Label text="Plese enter name of hotel">
         <VBox.margin>
            <Insets right="65.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="fxNameOfhotel" onAction="#onSearch" />
      <Label text="Filters" />
      <HBox prefHeight="46.0" prefWidth="200.0">
         <children>
            <CheckBox fx:id="fxPool" mnemonicParsing="false" text="Pool" />
            <CheckBox fx:id="fxGym" mnemonicParsing="false" text="Gym" />
            <CheckBox fx:id="fxBar" mnemonicParsing="false" text="Bar" />
         </children>
      </HBox>
      <Label text="Error Lable" />
      <Label text="Check-in" />
      <DatePicker fx:id="fxCheckIn" />
      <Label text="Check-out" />
      <DatePicker fx:id="fxCheckOut" />
      <Button mnemonicParsing="false" onAction="#onSearch" text="Search" />
      <ListView fx:id="fxListView" prefHeight="200.0" prefWidth="200.0" />
   </children>
</VBox>
