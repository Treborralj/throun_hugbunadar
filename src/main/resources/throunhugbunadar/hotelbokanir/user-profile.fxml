<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="309.0" prefWidth="266.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="throunhugbunadar.hotelbokanir.vidmot.ProfileInteractive">
   <children>
      <VBox prefHeight="324.0" prefWidth="266.0">
         <children>
            <VBox prefHeight="122.0" prefWidth="531.0">
               <children>
                  <HBox prefHeight="23.0" prefWidth="511.0">
                     <children>
                        <Label text="Username:" />
                        <Label fx:id="fxUsername">
                           <HBox.margin>
                              <Insets left="15.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets left="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox prefHeight="26.0" prefWidth="100.0">
                     <children>
                        <Label text="E-mail address:">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="fxEmail">
                           <HBox.margin>
                              <Insets left="15.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <Label text="Change email-address:">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="54.0" prefWidth="241.0" spacing="10.0">
               <children>
                  <TextField fx:id="fxNewEmail" promptText="Change email-address" />
                  <Button fx:id="fxEmailButton" mnemonicParsing="false" onMouseClicked="#fxChangeEmail" text="apply" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" />
               </VBox.margin>
            </HBox>
            <Label text="Change password:">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="36.0" prefWidth="246.0" spacing="10.0">
               <children>
                  <TextField fx:id="fxNewPassword" promptText="Change password" />
                  <Button fx:id="fxPasswordButton" mnemonicParsing="false" onMouseClicked="#fxChangePassword" text="apply" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="fxAlert" />
               </children>
            </HBox>
            <HBox prefHeight="62.0" prefWidth="246.0" spacing="30.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#fxMyBookings" text="View bookings" />
                  <Button mnemonicParsing="false" onMouseClicked="#fxDeleteAccount" text="Delete account" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
